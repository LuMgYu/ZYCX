<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/titlebar"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_back"
            style="@style/leftButton"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="返回" />

        <TextView
            style="@style/title"
            android:layout_centerInParent="true"
            android:text="@string/zixun_content" />

        <Button
            android:id="@+id/btn_share"
            style="@style/rightButton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="分享" />

        <Button
            android:id="@+id/btn_collect"
            style="@style/rightButton"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_share"
            android:text="收藏" />
    </RelativeLayout>

    <WebView
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/main_white_pure_color" >

        <include layout="@layout/view_line_vertical"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/margin_right_small" >

            <ImageView
                android:id="@+id/face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_right_small"
                android:src="@drawable/smile_face" />

            <EditText
                android:id="@+id/edit_cmt"
                style="@style/cmtedit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:cursorVisible="true"
                android:hint="说点什么吧"
                android:textCursorDrawable="@null" />

            <ImageView
                android:id="@+id/btn_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_small"
                android:src="@drawable/pinglunicon" />

            <TextView
                android:id="@+id/btn_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_small"
                android:drawableLeft="@drawable/zanicon"
                android:drawablePadding="5dp"
                android:text="1"
                android:textColor="@color/text_more_gray"
                android:textSize="@dimen/text_small" />
        </LinearLayout>
    </RelativeLayout>

    <com.zhiyicx.zycx.sociax.component.TSFaceView
        android:id="@+id/face_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:tag="ture"
        android:visibility="gone" />

</LinearLayout>