<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white_pure_color" >

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- 问题 -->

        <TextView
            android:id="@+id/tv_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_right_small"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/view_border_blue_solid_3"
            android:text="推荐"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_small"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_left_small"
            android:layout_marginTop="@dimen/margin_top_big"
            android:layout_toLeftOf="@id/tv_advice"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="肺癌晚期怎么治fdsfdsfffffffffff？"
            android:textColor="@color/text_black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="@dimen/margin_left_small"
            android:layout_marginRight="@dimen/margin_left_small"
            android:layout_marginTop="@dimen/margin_top"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/text_lineSpacingExtra"
            android:maxLines="2"
            android:text="冷先生：胸部的磁共振结果如何？如果结果都没有出现转移"
            android:textColor="@color/text_more_gray"
            android:textSize="@dimen/text_common" />
    </RelativeLayout>
    <!-- 专家回复 -->

    <TextView
        android:id="@+id/tv_expert_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_head"
        android:layout_marginLeft="@dimen/margin_left_small"
        android:layout_marginRight="@dimen/margin_right_small"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/main_white_bg_color"
        android:scrollHorizontally="true"
        android:singleLine="false"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/text_lineSpacingExtra"
        android:maxLines="2"
        android:paddingBottom="@dimen/margin_bottom"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="@dimen/margin_top"
        android:text="专家建议：胸部的磁共振结果如何?如果结果都没有出现转移结果都没有出现转移结果都没有出现转移结果都没有出现转移"
        android:textColor="@color/text_more_gray"
        android:textSize="@dimen/text_common" />
    <!-- 尾部 -->

    <RelativeLayout
        android:id="@+id/rl_footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_expert_answer" >

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_small"
            android:text="08月17日 11:15"
            android:textColor="@color/text_more_gray"
            android:textSize="@dimen/text_small" />

        <FrameLayout
            android:id="@+id/fl_agree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >
            <!-- 选择同意框 -->

            <RelativeLayout
                android:id="@+id/rl_agree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_right_small"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/iv_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_left_small"
                    android:src="@drawable/manyi" />

                <ImageView
                    android:id="@+id/iv_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_yes"
                    android:src="@drawable/bumanyi" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_right_small"
                android:drawableLeft="@drawable/gou"
                android:drawablePadding="5dp"
                android:text="满意评价"
                android:textColor="@color/text_green"
                android:textSize="@dimen/text_small"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_right_small"
                android:drawableLeft="@drawable/pinglunicon_request"
                android:drawablePadding="5dp"
                android:text="1"
                android:textColor="@color/text_more_gray"
                android:textSize="@dimen/text_small" />
        </FrameLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_request_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_gray_bg_color"
        android:visibility="gone"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>